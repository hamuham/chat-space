.chat-side
  .side-header
    .side-item
      = current_user.name
      .box
        .box-iconA
          = link_to new_group_path do
            = icon('fas', 'edit')
        .box-iconB
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')
  .group-list
    - current_user.groups.each do |group|
      .group
        = link_to '#' do
          .side-groups
            = group.name
